<Page x:Class="WpfApp3.AddRecord"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRecord">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="143*"/>

            <RowDefinition Height="600*"/>

            <RowDefinition Height="150*"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Background="White" Grid.Row="1">
        <TextBlock Name="TBTitle" Style="{StaticResource  TBStyle}"  >d</TextBlock>
        <TextBlock Name="TBDuration" Style="{StaticResource  TBStyle}"  >d</TextBlock>
            <GroupBox Margin="0,10,0,0" Header="ФИО клиента" Width="156">
                <ComboBox Width="130" Name="CBClients"/>
            </GroupBox>
            <DatePicker Name ="DTStart" Width="150"></DatePicker>
            <Button Template="{StaticResource CTButon}" Width="200" Margin="0,40,0,0"  Name="btnAdd" Click="btnAdd_Click">Добавить</Button>
            <Button Template="{StaticResource CTButon}" Width="200" Margin="0,10,0,0"  Name="btnBack" Click="btnBack_Click">Назад</Button>
        </StackPanel>

    </Grid>
</Page>
